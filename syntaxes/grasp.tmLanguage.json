{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "Grasp",
	"scopeName": "source.grasp",
	"patterns": [
		{
			"include": "#comments"
		},
		{
			"include": "#rule-heads"
		},
		{
			"name": "keyword.operator.arrow.grasp",
			"match": "<-"
		},
		{
			"include": "#body-statement"
		}
	],
	"repository": {
		"comments": {
			"patterns": [
				{
					"name": "comment.line.number-sign.grasp",
					"match": "^\\s*#.*$"
				}
			]
		},
		"rule-heads": {
			"patterns": [
				{
					"name": "meta.rule.grasp",
					"begin": "^([A-Za-z_][A-Za-z0-9_]*(?::[A-Za-z_][A-Za-z0-9_]*)?)(\\()",
					"beginCaptures": {
						"1": {
							"name": "entity.name.function.rule.grasp"
						},
						"2": {
							"name": "punctuation.definition.arguments.begin.grasp"
						}
					},
					"end": "(\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.arguments.end.grasp"
						}
					},
					"patterns": [
						{
							"include": "#keyvalue-args"
						},
						{
							"include": "#exprs"
						},
						{
							"include": "#comments"
						}
					]
				}
			]
		},
		"keyvalue-args": {
			"patterns": [
				{
					"match": "\\s*([a-z_][A-Za-z0-9_]*\\:)\\s*",
					"captures": {
						"1": {
							"name": "constant.other.key.grasp"
						}
					}
				}
			]
		},
		"exprs": {
			"patterns": [
				{
					"include": "#aggr-fncall"
				},
				{
					"include": "#exprs-without-aggregates"
				}
			]
		},
		"exprs-without-aggregates": {
			"patterns": [
				{
					"include": "#regular-fncall"
				},
				{
					"name": "string.quoted.double.grasp",
					"begin": "\"",
					"end": "\"",
					"patterns": [
						{
							"name": "constant.character.escape.grasp",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "string.quoted.backtick.grasp",
					"begin": "`",
					"end": "`",
					"patterns": [
						{
							"name": "constant.character.escape.grasp",
							"match": "\\\\."
						}
					]
				},
				{
					"name": "constant.language.grasp",
					"match": "\\b(true|false|NULL)\\b"
				},
				{
					"name": "constant.numeric.grasp",
					"match": "\\b\\d+(\\.\\d+)?\\b"
				},
				{
					"include": "#variables"
				}
			]
		},
		"variables": {
			"patterns": [
				{
					"match": "\\b\\??([a-z_][A-Za-z0-9_]*)\\b",
					"captures": {
						"1": {
							"name": "other.grasp"
						}
					}
				},
				{
					"match": "\\b\\??([a-z_][A-Za-z0-9_]*)(\\:\\:)([A-Z]+)\\b",
					"captures": {
						"1": {
							"name": "other.grasp"
						},
						"2": {
							"name": "keyword.operator.type-cast.grasp"
						},
						"3": {
							"name": "storage.type.grasp"
						}
					}
				}
			]
		},
		"aggr-fncall": {
			"patterns": [
				{
					"name": "meta.aggr-fncall.grasp",
					"begin": "([A-Za-z_][A-Za-z0-9_]*(?::[A-Za-z_][A-Za-z0-9_]*)?)(\\<)",
					"beginCaptures": {
						"1": {
							"name": "entity.name.function.aggregate.grasp"
						},
						"2": {
							"name": "keyword.other.grasp"
						}
					},
					"end": "(\\>)",
					"endCaptures": {
						"1": {
							"name": "keyword.other.grasp"
						}
					},
					"patterns": [
						{
							"include": "#keyvalue-args"
						},
						{
							"include": "#exprs-without-aggregates"
						},
						{
							"match": ",",
							"name": "punctuation.separator.arguments.grasp"
						}
					]
				}
			]
		},
		"regular-fncall": {
			"patterns": [
				{
					"name": "meta.fncall.grasp",
					"begin": "([A-Za-z_][A-Za-z0-9_]*(?::[A-Za-z_][A-Za-z0-9_]*)?)(\\()",
					"beginCaptures": {
						"1": {
							"name": "entity.name.function.grasp"
						},
						"2": {
							"name": "punctuation.definition.arguments.begin.grasp"
						}
					},
					"end": "(\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.arguments.end.grasp"
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#keyvalue-args"
						},
						{
							"include": "#exprs"
						},
						{
							"match": ",",
							"name": "punctuation.separator.arguments.grasp"
						}
					]
				}
			]
		},
		"negated-fact": {
			"patterns": [
				{
					"name": "meta.fact.grasp",
					"begin": "\\b(not)\\s+([A-Za-z_][A-Za-z0-9_]*(?::[A-Za-z_][A-Za-z0-9_]*)?)(\\()",
					"beginCaptures": {
						"1": {
							"name": "keyword.operator.grasp"
						},
						"2": {
							"name": "entity.name.function.grasp"
						},
						"3": {
							"name": "punctuation.definition.arguments.begin.grasp"
						}
					},
					"end": "(\\))",
					"endCaptures": {
						"1": {
							"name": "punctuation.definition.arguments.end.grasp"
						}
					},
					"patterns": [
						{
							"include": "#comments"
						},
						{
							"include": "#keyvalue-args"
						},
						{
							"include": "#exprs"
						},
						{
							"match": ",",
							"name": "punctuation.separator.arguments.grasp"
						}
					]
				}
			]
		},
		"interpolated-sql": {
			"name": "string.quoted.backtick.grasp",
			"begin": "SQL`",
			"end": "`",
			"patterns": [
				{
					"name": "constant.character.escape.grasp",
					"match": "\\\\."
				}
			]
		},
		"op-exprs": {
			"patterns": [
				{
					"match": "(:=|~|\\*|\\+|-|=|<|>|\\?)",
					"name": "keyword.operator.grasp"
				},
				{
					"match": "(::)([A-Z]+)",
					"captures": {
						"1": {
							"name": "keyword.operator.grasp"
						},
						"2": {
							"name": "storage.type.grasp"
						}
					}
				},
				{
					"include": "#exprs"
				}
			]
		},
		"body-statement": {
			"patterns": [
				{
					"include": "#keywords"
				},
				{
					"include": "#negated-fact"
				},
				{
					"include": "#regular-fncall"
				},
				{
					"include": "#interpolated-sql"
				},
				{
					"include": "#op-exprs"
				}
			]
		}
	}
}